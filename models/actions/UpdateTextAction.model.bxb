action (UpdateTextAction) {
  description (call to update the text of a memory)
  type (Search)
  collect {
    input (whenStored) {
      type (MemoryWhenStored)
      min (Required) max (One)
    }
    input (replacementText) {
      type (ReplacementText)
      min (Required) max (One)
    }
  }
  output (UpdateTextResponse)
}
